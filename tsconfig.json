{
  "extends": "@deftomat/opinionated/configs/tsconfig.json",
  "compilerOptions": {
    "lib": ["ES2023"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "ES2021",
    "outDir": "./dist/esm",
    "declaration": true,
    "resolveJsonModule": true,
    "inlineSources": true
  },
  "exclude": ["node_modules", "dist"]
}
